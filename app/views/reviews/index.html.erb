<div class="container">
    <div class="row justify-content-around" >
    <% @reviews.each do |review| %>
        <div class="col-2 card-review m-3 ">
          <h3> From <%=review.user.last_name %></h3>
          <p><%= review.content %></p>
         <%= link_to "✖️", root_path, class: "text-decoration-none", data: {turbo_method: :delete, turbo_confirm: "Voulez-vous vraiment supprimer votre avis ?"}%>
      </div>
    <% end %>
  </div>
  <%= link_to "Laisser un avis", new_review_path(@review), class: "button2 my-3" %>
</div>
